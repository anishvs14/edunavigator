<%- include('layouts/header'); -%>

<head>

    <style>
        body {
            margin: 0;
            min-height: 100vh;
            display: grid;
            place-items: center;
            background: linear-gradient(45deg, #ff6b6b, #4ecdc4);
            position: relative;
            overflow: hidden;
        }

        .blob {
            position: absolute;
            filter: blur(40px);
            opacity: 0.4;
            z-index: 0;
        }

        .blob-1 {
            width: 400px;
            height: 400px;
            background: #ff6b6b;
            top: 20%;
            left: 10%;
            animation: float 20s infinite;
        }

        .blob-2 {
            width: 300px;
            height: 300px;
            background: #4ecdc4;
            bottom: 30%;
            right: 10%;
            animation: float 25s infinite;
        }

        .glass-container {
            position: relative;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(12px);
            border-radius: 20px;
            padding: 2rem;
            box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
            border: 1px solid rgba(255, 255, 255, 0.18);
            width: 400px;
            text-align: center;
            z-index: 1;
        }

        .drop-zone {
            border: 2px dashed rgba(255, 255, 255, 0.3);
            border-radius: 15px;
            padding: 2rem;
            cursor: pointer;
            transition: all 0.3s;
        }

        .drop-zone:hover {
            background: rgba(255, 255, 255, 0.05);
        }

        .browse-btn {
            background: rgba(255, 255, 255, 0.1);
            border: none;
            padding: 12px 30px;
            color: white;
            border-radius: 50px;
            cursor: pointer;
            font-size: 1rem;
            transition: all 0.3s;
            margin-top: 1rem;
        }

        .browse-btn:hover {
            background: rgba(255, 255, 255, 0.2);
        }

        .alert-box {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(20px);
            padding: 2rem;
            border-radius: 20px;
            text-align: center;
            display: none;
            z-index: 2;
        }

        .alert-icon {
            width: 80px;
            height: 80px;
            margin-bottom: 1rem;
        }

        @keyframes float {
            0%, 100% { transform: translate(0, 0); }
            25% { transform: translate(10px, 10px); }
            50% { transform: translate(-10px, 20px); }
            75% { transform: translate(-20px, -10px); }
        }
    </style>
</head>
<body>
    <%- include('layouts/navbar'); -%>
    <div class="blob blob-1"></div>
    <div class="blob blob-2"></div>

    <div class="glass-container">
        <div class="drop-zone" ondragover="handleDragOver(event)" ondrop="handleDrop(event)">
            <h2 style="color: white; margin-bottom: 1rem;">Drag & Drop Files Here</h2>
            <div style="color: rgba(255, 255, 255, 0.7); margin: 1rem 0;">OR</div>
            <button class="browse-btn" onclick="document.getElementById('fileInput').click()">Browse Files</button>
            <input type="file" id="fileInput" hidden accept=".pdf">
        </div>
    </div>

    <div class="alert-box">
        <svg class="alert-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <!-- Success Icon -->
            <path id="success-icon" d="M22 11.08V12a10 10 0 1 1-5.93-9.14" style="display: none;"/>
            <path id="success-check" d="M22 4 12 14.01l-3-3" style="display: none;"/>
            
            <!-- Error Icon -->
            <path id="error-icon" d="M12 8v4m0 4h.01M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0z" style="display: none;"/>
        </svg>
        <h2 style="color: white; margin-bottom: 1rem;" id="alert-text"></h2>
        <div style="color: rgba(255, 255, 255, 0.7); margin-bottom: 1rem;" id="cert-info"></div>
        <button class="browse-btn" onclick="closeAlert()">Close</button>
    </div>

    <script>
        const EXPECTED_HASH = '9ec315853a860942e233c627bd5a501f5fb4b781f038147ef2c273b63d3fa4c3';
        const fileInput = document.getElementById('fileInput');
        
        function handleDragOver(e) {
            e.preventDefault();
            e.stopPropagation();
            e.dataTransfer.dropEffect = 'copy';
        }

        function handleDrop(e) {
            e.preventDefault();
            const files = e.dataTransfer.files;
            if(files.length > 0) validateFile(files[0]);
        }

        fileInput.addEventListener('change', (e) => validateFile(e.target.files[0]));

        function validateFile(file) {
            if(!file) return;

            const reader = new FileReader();
            reader.onload = (e) => {
                window.crypto.subtle.digest('SHA-256', e.target.result)
                    .then(hash => {
                        const hexHash = Array.from(new Uint8Array(hash))
                            .map(b => b.toString(16).padStart(2, '0'))
                            .join('');

                        showResult(hexHash === EXPECTED_HASH);
                    });
            };
            reader.readAsArrayBuffer(file);
        }

        function showResult(isValid) {
            const alertBox = document.querySelector('.alert-box');
            const successIcon = document.getElementById('success-icon');
            const successCheck = document.getElementById('success-check');
            const errorIcon = document.getElementById('error-icon');

            if(isValid) {
                document.getElementById('alert-text').textContent = 'Certificate Valid!';
                successIcon.style.display = 'block';
                successCheck.style.display = 'block';
                errorIcon.style.display = 'none';
                document.getElementById('cert-info').innerHTML = `
                    <div>Name: Arbaaz Khan</div>
                    <div>Date: 12/12/12</div>
                `;
            } else {
                document.getElementById('alert-text').textContent = 'Certificate Invalid!';
                successIcon.style.display = 'none';
                successCheck.style.display = 'none';
                errorIcon.style.display = 'block';
                document.getElementById('cert-info').innerHTML = '';
            }

            alertBox.style.display = 'block';
        }

        function closeAlert() {
            document.querySelector('.alert-box').style.display = 'none';
        }
    </script>
</body>
</html>