<%- include('layouts/header'); -%>
<%- include('layouts/tnavbar'); -%>
<!-- <body class="bg-gray-50 dark:bg-gray-900"> -->
    <!-- Main Container -->
    <div class="min-h-screen p-15">
        <!-- Header Section -->
        <header class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 mb-10">
            <div class="flex justify-between items-center">
                <div>
                    <h1 class="text-3xl font-bold text-gray-800 dark:text-gray">Welcome, <%= username %></h1>

                    <p class="text-gray-600 dark:text-gray-400">Senior Teacher - Mathematics Department</p>
                </div>
                <!-- Dark Mode Toggle -->
                <button id="darkModeToggle" class="p-2 rounded-lg bg-gray-200 dark:bg-gray-700">
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                        <path class="dark:hidden" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"></path>
                        <path class="hidden dark:block" d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
                    </svg>
                </button>
            </div>
        </header>

        <!-- Search and Filter Section -->
        <div class="bg-white dark:bg-white-200 rounded-lg shadow-lg p-6 mb-6">
            <div class="flex flex-col md:flex-row gap-4">
                <input type="text" placeholder="Search Students..." class="flex-1 px-4 py-2 rounded-lg border dark:bg-gray-700 dark:border-gray-600">
                <select class="px-4 py-2 rounded-lg border dark:bg-gray-700 dark:border-gray-600">
                    <option>All Subjects</option>
                    <option>Mathematics</option>
                    <option>Science</option>
                    <option>English</option>
                </select>
                <select class="px-4 py-2 rounded-lg border dark:bg-gray-700 dark:border-gray-600">
                    <option>All Status</option>
                    <option>In Progress</option>
                    <option>Completed</option>
                </select>
            </div>
        </div>

        <!-- Main Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-6">
            <!-- Syllabus Progress -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6">
                <h2 class="text-xl font-semibold mb-4 text-gray-800 dark:text-black">Syllabus Progress</h2>
                <div class="relative w-48 h-48 mx-auto">
                    <svg class="transform -rotate-90 w-full h-full" viewBox="0 0 100 100">
                        <circle class="text-gray-200 stroke-current" stroke-width="10" cx="50" cy="50" r="40" fill="none"/>
                        <circle class="text-green-500 stroke-current" stroke-width="10" cx="50" cy="50" r="40" fill="none"
                            stroke-dasharray="251.2" stroke-dashoffset="62.8"/>
                    </svg>
                    <div class="absolute inset-0 flex items-center justify-center">
                        <span class="text-3xl font-bold text-green-500">75%</span>
                    </div>
                </div>
            </div>

            <!-- Student Progress -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 mb-6">
                <h2 class="text-xl font-semibold mb-4 text-gray-800 dark:text-black">Student Progress</h2>
                <div class="space-y-4">
                    <% students.forEach(student => { %>
                        <div class="flex justify-between items-center">
                            <span class="text-gray-700 dark:text-black-300"><%= student.fullName %></span>
                            <div class="w-32 bg-gray-200 rounded-full h-2.5">
                                <div class="bg-blue-600 h-2.5 rounded-full" style="width: <%= student.progress %>%;"></div>
                            </div>
                            <span class="text-blue-600"><%= student.progress %>%</span>
                        </div>
                    <% }) %>
                </div>
            </div>

            <!-- Tasks and Assignments -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6">
                <div class="flex justify-between items-center mb-4">
                    <h2 class="text-xl font-semibold text-gray-800 dark:text-black">Tasks</h2>
                    <form action="/addTask" method="POST" class="flex gap-2">
                        <input type="text" name="title" placeholder="Task Title" class="px-2 py-1 border rounded">
                        <input type="date" name="dueDate" class="px-2 py-1 border rounded">
                        <button type="submit" class="px-4 py-2 bg-blue-600 text-black rounded-lg hover:bg-blue-700">
                            + Add Task
                        </button>
                    </form>
                </div>
                <div class="space-y-4">
                    <% tasks.forEach(task => { %>
                        <div class="p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
                            <h3 class="font-semibold text-gray-800 dark:text-white"><%= task.title %></h3>
                            <p class="text-sm text-gray-600 dark:text-gray-400">Due Date: <%= task.dueDate %></p>
                        </div>
                    <% }) %>
                </div>
            </div>
            
        </div>

        <!-- Aptitude Test Analytics -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6">
                <h2 class="text-xl font-semibold mb-4 text-gray-800 dark:text-white">Aptitude Test Results</h2>
                <canvas id="aptitudeChart" class="w-full"></canvas>
            </div>

            <!-- Announcements -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6">
                <div class="flex justify-between items-center mb-4">
                    <h2 class="text-xl font-semibold text-gray-800 dark:text-white">Announcements</h2>
                    <form action="/addAnnouncement" method="POST" class="flex gap-2">
                        <input type="text" name="title" placeholder="Announcement Title" class="px-2 py-1 border rounded">
                        <input type="date" name="date" class="px-2 py-1 border rounded">
                        <button type="submit" class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700">
                            + Add Announcement
                        </button>
                    </form>
                </div>
                <div class="space-y-4">
                    <% announcements.forEach(announcement => { %>
                        <div class="p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
                            <h3 class="font-semibold text-gray-800 dark:text-white"><%= announcement.title %></h3>
                            <p class="text-sm text-gray-600 dark:text-gray-400">Date: <%= announcement.date %></p>
                        </div>
                    <% }) %>
                </div>
            </div>
            
        </div>
    </div>
    <%- include('layouts/footer'); -%>

    <script>
        // Dark Mode Toggle
        const darkModeToggle = document.getElementById('darkModeToggle');
        darkModeToggle.addEventListener('click', () => {
            document.documentElement.classList.toggle('dark');
            localStorage.setItem('darkMode', document.documentElement.classList.contains('dark'));
        });

        // Check Dark Mode Preference
        if (localStorage.getItem('darkMode') === 'true' || 
            (!localStorage.getItem('darkMode') && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark');
        }

        // Aptitude Chart
        const ctx = document.getElementById('aptitudeChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Mathematics', 'Science', 'English', 'General Knowledge'],
                datasets: [{
                    label: 'Class Average (%)',
                    data: [75, 82, 65, 78],
                    backgroundColor: [
                        'rgba(59, 130, 246, 0.5)',
                        'rgba(16, 185, 129, 0.5)',
                        'rgba(239, 68, 68, 0.5)',
                        'rgba(139, 92, 246, 0.5)'
                    ],
                    borderColor: [
                        'rgb(59, 130, 246)',
                        'rgb(16, 185, 129)',
                        'rgb(239, 68, 68)',
                        'rgb(139, 92, 246)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 100
                    }
                }
            }
        });
    </script>
