<%- include('layouts/header'); -%>
<%- include('layouts/pnavbar'); -%>
<div class="container mx-auto px-4 py-6">
    <h2 class="text-3xl font-bold text-gray-800 mb-4">Welcome, Parent!</h2>
    <p class="text-lg text-gray-600 mb-6">Track your child's progress and career recommendations.</p>

    <!-- Dashboard Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        
        <!-- Student Progress Tracking -->
        <div class="bg-white p-6 rounded-lg shadow-md text-center">
            <h3 class="text-xl font-semibold mb-4">Student Attendance</h3>
            <div class="relative w-32 h-32 mx-auto">
                <svg class="w-full h-full" viewBox="0 0 100 100">
                    <circle class="text-gray-300 stroke-current" stroke-width="8" cx="50" cy="50" r="40" fill="transparent"></circle>
                    <circle class="text-green-500 stroke-current" stroke-width="8" cx="50" cy="50" r="40" fill="transparent"
                        stroke-dasharray="251.2" stroke-dashoffset="calc(251.2 - (251.2 * 80) / 100)" stroke-linecap="round"></circle>
                </svg>
                <div class="absolute inset-0 flex items-center justify-center text-xl font-bold text-gray-800">
                    80%
                </div>
            </div>
            <p class="text-gray-600 mt-2">Present</p>
        </div>

        <!-- Career Recommendation -->
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold mb-4">Career Recommendation</h3>
            <p class="text-gray-700">Based on aptitude and interests, we suggest:</p>
            <ul class="mt-3 space-y-2">
                <li class="p-3 bg-green-100 rounded-lg">📌 Data Science</li>
                <li class="p-3 bg-blue-100 rounded-lg">📌 Software Engineering</li>
                <li class="p-3 bg-yellow-100 rounded-lg">📌 Mechanical Engineering</li>
            </ul>
        </div>

        <!-- College Suggestions -->
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold mb-4">Recommended Colleges</h3>
            <ul class="space-y-2">
                <li class="p-3 bg-gray-100 rounded-lg">🏫 Vishwaniketan Institute of Technology</li>
                <li class="p-3 bg-gray-100 rounded-lg">🏫 MIT Pune</li>
                <li class="p-3 bg-gray-100 rounded-lg">🏫 vppcoe</li>
            </ul>
        </div>
    </div>

    <!-- Aptitude Test Results & Announcements -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-8">
        
        <!-- Aptitude Test Performance -->
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold mb-4">Aptitude Test Results</h3>
            <ul class="space-y-2">
                <li class="flex justify-between p-3 bg-gray-100 rounded-lg">
                    <span>Math</span>
                    <span class="font-bold text-green-600">88%</span>
                </li>
                <li class="flex justify-between p-3 bg-gray-100 rounded-lg">
                    <span>Science</span>
                    <span class="font-bold text-blue-600">75%</span>
                </li>
                <li class="flex justify-between p-3 bg-gray-100 rounded-lg">
                    <span>English</span>
                    <span class="font-bold text-red-600">65%</span>
                </li>
            </ul>
        </div>

        <!-- Announcements & Notifications -->
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold mb-4">Announcements</h3>
            <ul class="space-y-2">
                <li class="p-3 bg-gray-100 rounded-lg">📢 Parent-Teacher meeting next Friday.</li>
                <li class="p-3 bg-gray-100 rounded-lg">📢 Upcoming scholarship application deadlines.</li>
                <li class="p-3 bg-gray-100 rounded-lg">📢 School Annual Day on March 20th.</li>
            </ul>
        </div>
    </div>

    <!-- Parent-Student Linking Information -->
    <div class="bg-white p-6 rounded-lg shadow-md mt-8">
        <h3 class="text-xl font-semibold mb-4">Student Link Information</h3>
        <p class="text-gray-700 mb-3">Your child is linked to the platform using the unique code:</p>
        <div class="text-center bg-blue-100 p-3 rounded-lg text-xl font-bold text-blue-600">XYZ123</div>
    </div>

</div>
<%- include('layouts/footer'); -%>