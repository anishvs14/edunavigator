<%- include('layouts/header'); -%>

<%- include('layouts/navbar'); -%>

<body>
  <div class="container my-4">
    <div class="card">
      <div class="card-header">
        <h2 class="mb-0"><%= job.title %></h2>
      </div>
      <div class="card-body">
        <p class="card-text"><strong>Description:</strong> <%= job.description %></p>
        <p class="card-text"><strong>Pay:</strong> $<%= job.amount %></p>
        <p class="card-text"><strong>Posted by:</strong> <%= job.poster.username %></p>

        <% if (job.isAccepted) { %>
          <div class="alert alert-success" role="alert">
            This job has been <strong>accepted</strong> by: <%= job.acceptedBy.username %>
          </div>
          <!-- Chat between poster and acceptor (can be implemented here later) -->
        <% } else { %>
          <div class="alert alert-warning" role="alert">
            This job is <strong>still open</strong> for acceptance.
          </div>
        <% } %>
      </div>
    </div>

    <!-- Chat box will be displayed only if job hasn't been accepted -->
    <% if (!job.isAccepted) { %>
      <div class="card mt-4">
        <div class="card-header">
          <h4>Chat with the Poster</h4>
        </div>
        <div class="card-body">
          <div class="chat-box" style="height: 200px; overflow-y: scroll; border: 1px solid #ddd; padding: 10px;">
            <!-- Chat messages will go here -->
            <p><strong>Poster:</strong> Hello, feel free to ask any questions about the job.</p>
            <!-- Add your real-time chat integration here -->
          </div>
          <form class="mt-3">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Type a message...">
              <button class="btn btn-primary" type="submit">Send</button>
            </div>
          </form>
        </div>
      </div>
    <% } %>

    <!-- Back button -->
    <div class="mt-4">
      <a href="/jobsx" class="btn btn-secondary">Back to Jobs</a>
    </div>
  </div>

  <%- include('layouts/footer'); -%>
</body>
