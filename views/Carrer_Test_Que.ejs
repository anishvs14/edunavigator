<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Career Interest Questions</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Career Interest Questions</h1>
        <form action="/submit_answers_carrer" method="POST">
            <% questions.forEach((question, index) => { %>
                <div class="card mt-3">
                    <div class="card-body">
                        <h5 class="card-title"><%= question.questionText %></h5>
                        <% question.options.forEach((option) => { %>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="question<%= index %>" value="<%= option.category %>" required>
                                <label class="form-check-label">
                                    <%= option.optionText %>
                                </label>
                            </div>
                        <% }); %>
                    </div>
                </div>
            <% }); %>
            <button type="submit" class="btn btn-primary mt-3">Submit Answers</button>
        </form>
    </div>
</body>
</html>
