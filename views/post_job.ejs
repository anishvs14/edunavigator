<%- include('layouts/header'); -%>

<body>
  <%- include('layouts/navbar'); -%>

  <div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="glassmorphism-card p-5">
      <h1 class="text-center mb-4">Post a New Job</h1>
      
      <form action="/jobs/post" method="POST">
        <div class="form-group mb-3">
          <label for="title" class="form-label">Job Title:</label>
          <input type="text" id="title" name="title" class="form-control" placeholder="Enter job title" required>
        </div>
        <div class="form-group mb-3">
          <label for="description" class="form-label">Job Description:</label>
          <textarea id="description" name="description" class="form-control" rows="4" placeholder="Describe the job" required></textarea>
        </div>
        <div class="form-group mb-4">
          <label for="amount" class="form-label">Amount (in Rs):</label>
          <input type="number" id="amount" name="amount" class="form-control" placeholder="Amount in Rupees" required>
        </div>
        
        <div class="d-grid gap-2">
          <button type="submit" class="btn btn-primary btn-block">Post Job</button>
        </div>
      </form>
      
      <div class="text-center mt-4">
        <a href="/jobsx" class="btn btn-secondary">Back to Job List</a>
      </div>
    </div>
  </div>

  <style>
    .glassmorphism-card {
      background: rgba(255, 255, 255, 0.2);
      border-radius: 15px;
      backdrop-filter: blur(10px);
      box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.3);
      max-width: 500px;
      width: 100%;
    }

    body {
      background: url('/img/neonsky.jpeg') no-repeat center center fixed;
      background-size: cover;
      height: 100vh;
    }

    .vh-100 {
      height: 100vh;
    }

    .form-control {
      background-color: rgba(255, 255, 255, 0.6);
      border: none;
      border-radius: 8px;
      padding: 0.75rem 1rem;
    }
  </style>

  <%- include('layouts/footer'); -%>
</body>
