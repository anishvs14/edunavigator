                salaries: [125000, 135000, 150000]
            },
            "UI/UX Design": {
                careers: ["UI Designer", "UX Researcher", "Product Designer"],
                salaries: [85000, 90000, 95000]
            },
            "Game Development": {
                careers: ["Game Developer", "Level Designer", "Game Artist"],
                salaries: [95000, 100000, 85000]
            },
            "Automation": {
                careers: ["Automation Engineer", "Test Automation Specialist", "Robotic Process Automation Engineer"],
                salaries: [105000, 110000, 115000]
            },
            "Web Development": {
                careers: ["Frontend Developer", "Backend Developer", "Full Stack Developer"],
                salaries: [100000, 110000, 115000]
            },
            "Mobile App Development": {
                careers: ["iOS Developer", "Android Developer", "Mobile UI Developer"],
                salaries: [120000, 110000, 95000]
            },
            "Cloud Architect": {
                careers: ["Cloud Solution Architect", "Cloud Infrastructure Engineer", "DevOps Engineer"],
                salaries: [135000, 130000, 125000]
            },
            "DevOps": {
                careers: ["DevOps Engineer", "Automation Engineer", "CI/CD Specialist"],
                salaries: [130000, 125000, 115000]
            },
            // Add more recommendations and salaries for all skills and interests
        };

        function search(inputId, type) {
            const searchTerm = document.getElementById(inputId).value.toLowerCase();
            const labels = document.querySelectorAll(`input[name="${type}"]`).forEach(checkbox => {
                const label = checkbox.parentElement;
                if (label.textContent.toLowerCase().includes(searchTerm)) {
                    label.style.display = "block";
                } else {
                    label.style.display = "none";
                }
            });
        }

        function getRecommendations() {
            const selectedSkills = Array.from(document.querySelectorAll('input[name="skills"]:checked')).map(cb => cb.value);
            const selectedInterests = Array.from(document.querySelectorAll('input[name="interests"]:checked')).map(cb => cb.value);
            
            const recommendationList = document.getElementById('recommendationList');
            const salaryTableBody = document.querySelector('#salaryTable tbody');
            
            recommendationList.innerHTML = '';
            salaryTableBody.innerHTML = '';
            
            const selected = [...selectedSkills, ...selectedInterests];
            const addedCareers = new Set();

            selected.forEach(selection => {
                if (recommendations[selection]) {
                    recommendations[selection].careers.forEach((career, index) => {
                        if (!addedCareers.has(career)) {
                            addedCareers.add(career);
                            
                            // Add to recommendation list
                            const li = document.createElement('li');
                            li.textContent = career;
                            recommendationList.appendChild(li);
                            
                            // Add to salary table
                            const tr = document.createElement('tr');
                            const tdCareer = document.createElement('td');
                            const tdSalary = document.createElement('td');
                            tdCareer.textContent = career;
                            tdSalary.textContent = recommendations[selection].salaries[index];
                            tr.appendChild(tdCareer);
                            tr.appendChild(tdSalary);
                            salaryTableBody.appendChild(tr);
                        }
                    });
                }
            });
            
            document.getElementById('recommendations').classList.remove('hidden');
        }
    </script>

