        }

        #recommendationList {
            list-style-type: none;
            padding: 0;
        }

        #recommendationList li {
            background-color: #e0e0e0;
            margin: 10px 0;
            padding: 10px;
            border-radius: 4px;
            font-size: 18px;
        }

        .hidden {
            display: none;
        }

        /* Scroll section for skills and interests */
        #skillsContainer, #interestsContainer {
            max-height: 200px;
            overflow-y: scroll;
        }

        input[type="text"] {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        /* Salary table */
        table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }
