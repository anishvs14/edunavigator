<%- include('layouts/header'); -%>
<%- include('layouts/pnavbar'); -%>

<section class="bg-light p-4">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm p-4">
                    <h3 class="text-center mb-4">Parent Profile</h3>

                    <form action="/parentprofile" method="POST">
                        <div class="mb-3">
                            <label class="form-label">Username</label>
                            <input type="text" class="form-control" value="<%= username %>" disabled>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" name="email" value="<%= email %>" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Phone</label>
                            <input type="text" class="form-control" name="phone" value="<%= phone %>" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Student Unique Code</label>
                            <input type="text" class="form-control" name="studentCode" placeholder="Enter student's unique code" required>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Update Profile</button>
                    </form>

                    <% if (linkedStudent) { %>
                        <hr>
                        <h5 class="text-center mt-3">Linked Student Details</h5>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>State</th>
                                    <th>College</th>
                                    <th>Course</th>
                                    <th>Year</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><%= linkedStudent.fullName %></td>
                                    <td><%= linkedStudent.email %></td>
                                    <td><%= linkedStudent.phone %></td>
                                    <td><%= linkedStudent.state %></td>
                                    <td><%= linkedStudent.collegeName %></td>
                                    <td><%= linkedStudent.course %></td>
                                    <td><%= linkedStudent.year %></td>
                                </tr>
                            </tbody>
                        </table>
                    <% } else { %>
                        <p class="text-center text-muted mt-3">No student linked yet.</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('layouts/footer'); -%>
